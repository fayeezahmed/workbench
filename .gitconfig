[includeIf "gitdir:~/**"]
  path = ~/.gitconfig-personal
[includeIf "gitdir:~/newsuk/**"]
  path = ~/.gitconfig-work
[includeIf "gitdir:~/learning/**"]
  path = ~/.gitconfig-personal
[includeIf "gitdir:~/personal/**"]
  path = ~/.gitconfig-personal
[includeIf "gitdir:~/.vim/**"]
  path = ~/.gitconfig-personal
[includeIf "gitdir:~/.tmux/**"]
  path = ~/.gitconfig-personal
[includeIf "gitdir:~/vimwiki/**"]
  path = ~/.gitconfig-personal
[user]
	name = Fayeez Ahmed
[credential]
	helper = osxkeychain
    useHttpPath=true
[alias]
	conflicted = !vim +Conflicted
[mergetool "vim-conflicted"]
	cmd = vim +Conflicted
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[url "git@github.com:"]
    insteadOf = https://github.com/
